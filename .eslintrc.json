{
  "env": {
       "node": true
   },

  "plugins": [
    "mocha"
  ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  },

  "overrides": [
     {
         "files": [ "test/**/*.js" ],
         "env": { "mocha": true },
         "rules": {
             "max-nested-callbacks": [ "error", 8 ]
         }
     }
 ]

}
